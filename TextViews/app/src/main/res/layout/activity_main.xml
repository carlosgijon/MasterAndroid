<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.carlos.textviews.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText   android:id="@+id/txtEditable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:hint="Introduce aqui un texto para cambiarlo abajo"/>

        <TextView
            android:id="@+id/LblEtiqueta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#AA44FF"
            android:padding="40dp"
            android:text="@string/escribe_Algo"
            android:textAlignment="center"
            android:textColor="#fff"
            android:typeface="monospace" />

        <Button android:id="@+id/btnHacerCambios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apretar para que funcione"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
